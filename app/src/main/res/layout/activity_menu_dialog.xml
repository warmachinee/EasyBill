<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/number1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#FFFFFFFF"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.496">

        <Button
            android:id="@+id/Transfer"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="36dp"
            android:drawableTop="@drawable/ic_swap_horiz_black_48dp"
            android:text="Transfer"
            app:layout_constraintBottom_toTopOf="@+id/receipt"
            app:layout_constraintEnd_toStartOf="@+id/autoPay"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="24dp" />

        <Button
            android:id="@+id/autoPay"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="36dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="36dp"
            android:drawableTop="@drawable/ic_autopayment_black_48dp"
            android:text="auto pay"
            app:layout_constraintBottom_toTopOf="@+id/manual"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/Transfer"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="36dp"
            android:layout_marginLeft="24dp" />

        <Button
            android:id="@+id/receipt"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            android:layout_marginEnd="24dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="24dp"
            android:drawableTop="@drawable/ic_receipt_black_48dp"
            android:text="receipt"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/manual"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Transfer"
            android:layout_marginRight="24dp"
            android:layout_marginLeft="36dp" />

        <Button
            android:id="@+id/manual"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            android:layout_marginEnd="36dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:drawableTop="@drawable/ic_camera_alt_black_48dp"
            android:text="manual"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/receipt"
            app:layout_constraintTop_toBottomOf="@+id/autoPay"
            android:layout_marginRight="36dp"
            android:layout_marginLeft="24dp" />
    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>